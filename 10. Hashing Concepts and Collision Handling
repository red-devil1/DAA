#             Experiment No.â€”10 : Hashing Concepts and Collision Handling

# a. Implement a hash table with chaining or linear probing.
b. Simulate insertion, deletion, and search with collisions.
c. Discuss practical hashing applications (e.g., dictionary lookup, indexing).

#include <stdio.h>
#include <stdlib.h>
#define SIZE 7 // Hash Table Size
// ------------ HASH TABLE USING LINEAR PROBING ------------
int hashTable[SIZE];
// Initialize Hash Table
void initTable() {
for (int i = 0; i < SIZE; i++)
hashTable[i] = -1; // -1 means empty slot
}
// Hash Function
int hash(int key) {
return key % SIZE;
}
// Insert with Collision Handling (Linear Probing)
void insert(int key) {
int index = hash(key);
int start = index;
while (hashTable[index] != -1) {
index = (index + 1) % SIZE;
if (index == start) {
printf("Hash Table is Full! Cannot insert %d\n", key);
return;
}
}
hashTable[index] = key;
printf("Inserted %d at index %d\n", key, index);
}
// Search Key
void search(int key) {
int index = hash(key);
int start = index;
while (hashTable[index] != -1) {
if (hashTable[index] == key) {
printf("Found %d at index %d\n", key, index);
return;
}
index = (index + 1) % SIZE;
if (index == start) break;
}
printf("%d not found!\n", key);
}
// Delete Key
void deleteKey(int key) {
int index = hash(key);
int start = index;
while (hashTable[index] != -1) {
if (hashTable[index] == key) {
hashTable[index] = -1;
printf("Deleted %d from index %d\n", key, index);
return;
}
index = (index + 1) % SIZE;
if (index == start) break;
}
printf("%d not found to delete!\n", key);
}
// Display Table
void display() {
printf("\nHash Table: ");
for (int i = 0; i < SIZE; i++)
printf("[%d] ", hashTable[i]);
printf("\n");
}
// ------------ MAIN FUNCTION ------------
int main() {
initTable();
printf("--- Insertion with Collision Handling ---\n");
insert(10);
insert(20);
insert(5);
insert(15);
insert(7);
insert(32); // Will collide and use linear probing
display();
printf("\n--- Searching ---\n");
search(15);
search(99); // Not present
printf("\n--- Deletion ---\n");
deleteKey(15);
deleteKey(99); // Not present
display();
printf("\n--- Practical Applications ---\n");
printf("- Hash tables are used in dictionary lookups, indexing, caches.\n");
printf("- Efficient for constant-time search, insert, and delete.\n");
return 0;
}
