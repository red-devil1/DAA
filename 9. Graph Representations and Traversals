#             Experiment No.â€”9 : Graph Representations and Traversals

# a. Represent graphs using adjacency matrices and lists.
b. Implement BFS and DFS to explore graph components.
c. Use graphs for mapping routes or exploring social networks.

#include <stdio.h>
#include <stdlib.h>
#define MAX 10
// ----------- GRAPH REPRESENTATION (Adjacency Matrix + List) -----------
int adjMatrix[MAX][MAX];
typedef struct Node {
int vertex;
struct Node* next;
} Node;
Node* adjList[MAX];
// ----------- ADD EDGE FUNCTION -----------
void addEdgeMatrix(int u, int v) {
adjMatrix[u][v] = adjMatrix[v][u] = 1; // Undirected graph
}
void addEdgeList(int u, int v) {
Node* newNode = (Node*)malloc(sizeof(Node));
newNode->vertex = v;
newNode->next = adjList[u];
adjList[u] = newNode;
newNode = (Node*)malloc(sizeof(Node));
newNode->vertex = u;
newNode->next = adjList[v];
adjList[v] = newNode;
}
// ----------- BFS IMPLEMENTATION -----------
void BFS(int start, int vertices) {
int visited[MAX] = {0}, queue[MAX], front = 0, rear = 0;
visited[start] = 1;
queue[rear++] = start;
printf("BFS Traversal: ");
while (front < rear) {
int v = queue[front++];
printf("%d ", v);
for (int i = 0; i < vertices; i++) {
if (adjMatrix[v][i] && !visited[i]) {
visited[i] = 1;
queue[rear++] = i;
}
}
}
printf("\n");
}
// ----------- DFS IMPLEMENTATION -----------
void DFSUtil(int v, int visited[], int vertices) {
visited[v] = 1;
printf("%d ", v);
for (int i = 0; i < vertices; i++) {
if (adjMatrix[v][i] && !visited[i])
DFSUtil(i, visited, vertices);
}
}
void DFS(int start, int vertices) {
int visited[MAX] = {0};
printf("DFS Traversal: ");
DFSUtil(start, visited, vertices);
printf("\n");
}
// ----------- DISPLAY GRAPH -----------
void displayMatrix(int vertices) {
printf("\nAdjacency Matrix:\n");
for (int i = 0; i < vertices; i++) {
for (int j = 0; j < vertices; j++)
printf("%d ", adjMatrix[i][j]);
printf("\n");
}
}
void displayList(int vertices) {
printf("\nAdjacency List:\n");
for (int i = 0; i < vertices; i++) {
printf("%d -> ", i);
Node* temp = adjList[i];
while (temp) {
printf("%d ", temp->vertex);
temp = temp->next;
}
printf("\n");
}
}
// ----------- MAIN FUNCTION -----------
int main() {
int vertices = 5; // Example graph
for (int i = 0; i < vertices; i++) adjList[i] = NULL;
// Add sample edges (undirected graph)
addEdgeMatrix(0, 1); addEdgeList(0, 1);
addEdgeMatrix(0, 2); addEdgeList(0, 2);
addEdgeMatrix(1, 3); addEdgeList(1, 3);
addEdgeMatrix(2, 4); addEdgeList(2, 4);
addEdgeMatrix(3, 4); addEdgeList(3, 4);
displayMatrix(vertices);
displayList(vertices);
BFS(0, vertices);
DFS(0, vertices);
printf("\n--- Observation ---\n");
printf("BFS explores level by level (useful for shortest path).\n");
printf("DFS explores deep paths first (useful for connected components).\n");
printf("Graphs can represent routes, networks, or relationships.\n");
return 0;
}
