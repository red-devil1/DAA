#         Experiment No.â€”3 : : Polynomial Operations Using Linked Lists 

# a. Represent polynomials using linked lists.
b. Perform polynomial addition and subtraction by merging lists.
c. Use structured representation to reinforce node manipulation.

#include <stdio.h>
#include <stdlib.h>
// Node structure
struct Node {
int coeff; // Coefficient
int pow; // Power
struct Node* next;
};
// Global heads for each polynomial
struct Node* head1 = NULL;
struct Node* head2 = NULL;
struct Node* sumHead = NULL;
struct Node* diffHead = NULL;
// Create a new node
struct Node* createNode(int coeff, int pow) {
struct Node* newNode = (struct
Node*)malloc(sizeof(struct Node));
if (!newNode) {
printf("Memory allocation failed.\n");
exit(1);
}
newNode->coeff = coeff;
newNode->pow = pow;
newNode->next = NULL;
return newNode;
}
// Insert at the end for Polynomial 1
void insertAtEnd1(int coeff, int pow) {
struct Node* newNode = createNode(coeff,
pow);
if (head1 == NULL) {
head1 = newNode;
} else {
struct Node* temp = head1;
while (temp->next != NULL)
temp = temp->next;
temp->next = newNode;
}
}
// Insert at the end for Polynomial 2
void insertAtEnd2(int coeff, int pow) {
struct Node* newNode = createNode(coeff,
pow);
if (head2 == NULL) {
head2 = newNode;
} else {
struct Node* temp = head2;
while (temp->next != NULL)
temp = temp->next;
temp->next = newNode;
}
}
// Insert at the end for Sum Polynomial
void insertAtEndSum(int coeff, int pow) {
struct Node* newNode = createNode(coeff,
pow);
if (sumHead == NULL) {
sumHead = newNode;
} else {
struct Node* temp = sumHead;
while (temp->next != NULL)
temp = temp->next;
temp->next = newNode;
}
}
// Insert at the end for Difference Polynomial
void insertAtEndDiff(int coeff, int pow) {
struct Node* newNode = createNode(coeff,
pow);
if (diffHead == NULL) {
diffHead = newNode;
} else {
struct Node* temp = diffHead;
while (temp->next != NULL)
temp = temp->next;
temp->next = newNode;
}
}
// Display polynomial
void displayPoly(struct Node* head) {
if (head == NULL) {
printf("Polynomial is empty.\n");
return;
}
struct Node* temp = head;
while (temp != NULL) {
printf("%dx^%d", temp->coeff, temp->pow);
if (temp->next != NULL &&
temp->next->coeff >= 0)
printf(" + ");
else if (temp->next != NULL)
printf(" ");
temp = temp->next;
}
printf("\n");
}
// Add polynomials
void addPoly() {
struct Node* p1 = head1;
struct Node* p2 = head2;
sumHead = NULL;
while (p1 != NULL && p2 != NULL) {
if (p1->pow > p2->pow) {
insertAtEndSum(p1->coeff, p1->pow);
p1 = p1->next;
} else if (p1->pow < p2->pow) {
insertAtEndSum(p2->coeff, p2->pow);
p2 = p2->next;
} else {
insertAtEndSum(p1->coeff + p2->coeff,
p1->pow);
p1 = p1->next;
p2 = p2->next;
}
}
while (p1 != NULL) {
insertAtEndSum(p1->coeff, p1->pow);
p1 = p1->next;
}
while (p2 != NULL) {
insertAtEndSum(p2->coeff, p2->pow);
p2 = p2->next;
}
}
// Subtract polynomials (head1 - head2)
void subPoly() {
struct Node* p1 = head1;
struct Node* p2 = head2;
diffHead = NULL;
while (p1 != NULL && p2 != NULL) {
if (p1->pow > p2->pow) {
insertAtEndDiff(p1->coeff, p1->pow);
p1 = p1->next;
} else if (p1->pow < p2->pow) {
insertAtEndDiff(-p2->coeff, p2->pow);
p2 = p2->next;
} else {
insertAtEndDiff(p1->coeff - p2->coeff,
p1->pow);
p1 = p1->next;
p2 = p2->next;
}
}
while (p1 != NULL) {
insertAtEndDiff(p1->coeff, p1->pow);
p1 = p1->next;
}
while (p2 != NULL) {
insertAtEndDiff(-p2->coeff, p2->pow);
p2 = p2->next;
}
}
int main() {
// First polynomial: 5x^2 + 4x^1 + 2
insertAtEnd1(5, 2);
insertAtEnd1(4, 1);
insertAtEnd1(2, 0);
// Second polynomial: 5x^1 + 5
insertAtEnd2(5, 1);
insertAtEnd2(5, 0);
printf("Polynomial 1: ");
displayPoly(head1);
printf("Polynomial 2: ");
displayPoly(head2);
// Addition
addPoly();
printf("\nSum: ");
displayPoly(sumHead);
// Subtraction
subPoly();
printf("Difference: ");
displayPoly(diffHead);
return 0;
}
