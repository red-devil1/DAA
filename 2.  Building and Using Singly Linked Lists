#            Experiment No.â€”2 : : Building and Using Singly Linked Lists

# a. Construct a dynamic singly linked list with basic operations.
b. Apply linked lists to simulate scenarios such as managing a playlist or to-do list.
c. Compare static (array) vs dynamic (linked) approaches.

#include <stdio.h>
#include <stdlib.h>
#include <string.h>

// Define structure for a playlist node
struct Node {
    char song[100];
    struct Node* next;
};

// Create a new node
struct Node* createNode(char songName[]) {
    struct Node* newNode = (struct
    Node*)malloc(sizeof(struct Node));
    strcpy(newNode->song, songName);
    newNode->next = NULL;
    return newNode;
}

// Insert at the end of the playlist
struct Node* insertEnd(struct Node* head, char
songName[]) {
    struct Node* newNode = createNode(songName);
    if (head == NULL) {
        return newNode;
    }
    struct Node* temp = head;
    while (temp->next != NULL) {
        temp = temp->next;
    }
    temp->next = newNode;
    return head;
}
// Delete a song by name
struct Node* deleteSong(struct Node* head, char songName[]) {
    if (head == NULL) {
        printf("Playlist is empty.\n");
        return NULL;
    }

    struct Node* temp = head;
    struct Node* prev = NULL;
    while (temp != NULL && strcmp(temp->song, songName) != 0) {
        prev = temp;
        temp = temp->next;
    }

    if (temp == NULL) {
        printf("Song not found in playlist.\n");
        return head;
    }

    if (prev == NULL) {
        head = head->next; // Deleting head
    } else {
        prev->next = temp->next;
    }
    
    free(temp);
    printf("Deleted '%s' from the playlist.\n",
           songName);
    
    return head;
}
// Display the playlist
void display(struct Node* head) {
    if (head == NULL) {
        printf("Playlist is empty.\n");
        return;
    }
    printf("Your Playlist:\n");
    while (head != NULL) {
        printf("%s\n", head->song);
        head = head->next;
    }
}

// Free the entire playlist
void freeList(struct Node* head) {
    struct Node* temp;
    while (head != NULL) {
        temp = head;
        head = head->next;
        free(temp);
    }
}

// Main function to simulate playlist
int main() {
    struct Node* playlist = NULL;
    int choice;
    char songName[100];

    do {
        printf("\n--- Playlist Menu ---\n");
printf("1. Add Song\\n2. Delete Song\\n3. Show Playlist\\n4. Exit\\n");
printf("Enter your choice: ");
scanf("%d", &choice);
getchar(); // Consume newline
switch (choice) {
case 1:
    printf("Enter song name: ");
    fgets(songName, 100, stdin);
    songName[strcspn(songName, "\n")] = 0; // Remove newline
    playlist = insertEnd(playlist, songName);
    break;
case 2:
    printf("Enter song name to delete: ");
    fgets(songName, 100, stdin);
    songName[strcspn(songName, "\n")] = 0;
    playlist = deleteSong(playlist, songName);
    break;
case 3:
    display(playlist);
    break;
case 4:
    freeList(playlist);
    printf("Exiting Playlist Manager.\\n");
    break;
default:
    printf("Invalid choice. Try again \\n");
}
} while (choice != 4);
return 0;
}
