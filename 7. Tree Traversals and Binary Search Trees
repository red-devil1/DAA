#             Experiment No.â€”7 : Tree Traversals and Binary Search Trees

# a. Create a binary search tree (BST) from a dataset.
b. Perform and visualize in-order, pre-order, and post-order traversals.
c. Use traversal results to derive sorted sequences.

#include <stdio.h>
#include <stdlib.h>
// ----------- Structure for BST Node -----------
typedef struct Node {
int data;
struct Node *left, *right;
} Node;
// ----------- Function to Create New Node -----------
Node* createNode(int value) {
Node* newNode = (Node*) malloc(sizeof(Node));
newNode->data = value;
newNode->left = newNode->right = NULL;
return newNode;
}
// ----------- Function to Insert Node in BST -----------
Node* insert(Node* root, int value) {
if (root == NULL)
return createNode(value);
if (value < root->data)
root->left = insert(root->left, value);
else if (value > root->data)
root->right = insert(root->right, value);
return root;
}
// ----------- Traversals -----------
void inorder(Node* root) {
if (root == NULL) return;
inorder(root->left);
printf("%d ", root->data);
inorder(root->right);
}
void preorder(Node* root) {
if (root == NULL) return;
printf("%d ", root->data);
preorder(root->left);
preorder(root->right);
}
void postorder(Node* root) {
if (root == NULL) return;
postorder(root->left);
postorder(root->right);
printf("%d ", root->data);
}
// ----------- Main Function -----------
int main() {
Node* root = NULL;
int data[] = {50, 30, 70, 20, 40, 60, 80}; // Sample dataset
int n = sizeof(data) / sizeof(data[0]);
// Create BST
for (int i = 0; i < n; i++) {
root = insert(root, data[i]);
}
printf("\n--- Binary Search Tree Traversals ---\n");
printf("In-Order (Sorted Sequence): ");
inorder(root);
printf("\nPre-Order (Root-Left-Right): ");
preorder(root);
printf("\nPost-Order (Left-Right-Root): ");
postorder(root);
printf("\n\n--- Observation ---\n");
printf("In-Order traversal gives elements in sorted order.\n");
return 0;
}
